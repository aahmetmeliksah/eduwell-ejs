<%- include('partials/_header.ejs') %> <%- include('partials/_navigation.ejs')%>

<!-- Register page -->
<div class="container" style="margin-top: 15rem">
  <div class="row">
    <div class="col-md-6 col-md-offset-3 mx-auto">
      <div class="panel panel-login">
        <div class="panel-heading">
          <div class="row">
            <div class="col-12 text-center">
              <h1> Register </h1>
            </div>
          </div>
          <hr />
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-lg-12">
<!-- 
    FORM START 
 -->
              <form method="POST" action="users/register">
                <div class="form-group">
                  <input
                    type="text" 
                    name="name"
                    id="name"
                    tabindex="1"
                    class="form-control p-2 m-2"
                    placeholder="Name"
                  />
                </div>

                <div class="form-group"></div>
                <input
                type="email"
                name="email"
                id="email"
                tabindex="1"
                class="form-control p-2 m-2"
                placeholder="Email"
              />
            </div>
            </div>

                <div class="form-group">
                  <input
                    type="password"
                    name="password"
                    id="password"
                    tabindex="2" 
                    class="form-control p-2 m-2"
                    placeholder="Password"
                  />
                </div>
            
                <div class="form-group col-lg-10 m-auto">
                  <div class="row">
              
                      <select name="role" class="m-2 p-2 rounded-3">
                        <option value="student">Student</option>
                        <option value="teacher">Teacher</option>
                      </select>
                
                        <button
                          type="submit"
                          id="submit"
                          class="btn bg-success text-white btn-radius btn-brd grd1 btn-block p-2 m-2"
                        >
                          REGISTER
                        </button>
                    
                  </div>
                </div>
             
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>