<%- include('partials/_header.ejs') %> <%- include('partials/_navigation.ejs')%>

<!-- Login page -->
<div class="container" style="margin-top: 15rem">
  <div class="row">
    <div class="col-md-6 col-md-offset-3 m-auto">
      <div class="panel panel-login">
        <div class="panel-heading">
          <div class="row">
            <div class="col-12 text-center">
              <h1>Login</h1>
            </div>
          </div>
          <hr />
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-lg-12">
              <!-- 
  FORM START
 -->

              <form
                id="login-form"
                method="POST"
                style="display: block"
                action="users/login"
              >
                <div class="form-group">
                  <input
                    type="text"
                    name="email"
                    id="name"
                    tabindex="1"
                    class="form-control p-2 m-2"
                    placeholder="Email"
                  />
                </div>
                <div class="form-group">
                  <input
                    type="password"
                    name="password"
                    id="password"
                    tabindex="2"
                    class="form-control p-2 m-2"
                    placeholder="Password"
                  />
                </div>

                <div class="form-group col-lg-10 m-auto">
                  <div class="row">
                    <button
                      type="submit"
                      id="submit"
                      class="btn bg-primary text-white btn-radius btn-brd grd1 btn-block p-2 m-2"
                    >
                      LOGIN
                    </button>
                  </div>
                </div>

                <div class="form-group">
                  <div class="row">
                    <div class="col-lg-12">
                      <div class="text-center">
                        <a
                          href="http://phpoll.com/recover"
                          tabindex="5"
                          class="forgot-password"
                          >Forgot Password?</a
                        >
                      </div>
                    </div>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
